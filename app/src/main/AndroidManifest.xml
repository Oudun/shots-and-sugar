<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.veve.shotsandsugar">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.veve.shotsandsugar.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.veve.shotsandsugar.activities.SugarActivity"
            android:label="@string/title_activity_sugar"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.veve.shotsandsugar.activities.ShotActivity"
            android:label="@string/title_activity_shot"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.veve.shotsandsugar.activities.MealActivity"
            android:label="@string/title_activity_meal"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.veve.shotsandsugar.activities.DiagramActivity"
            android:label="@string/title_activity_diagram"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.veve.shotsandsugar.activities.ActivityActivity"
            android:label="@string/title_activity_activity"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
    </application>

</manifest>